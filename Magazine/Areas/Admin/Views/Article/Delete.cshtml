@model Magazine.Models.Article

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xóa người dùng</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tiêu đề:</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>

        <dt>Ngày đăng:</dt>
        <dd>@Model.PostTime</dd>

    </dl>

    @using (Html.BeginForm("Delete", "Article", FormMethod.Post, new { area = "Admin" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ArticleID)
        <div class="form-group">
            <input type="submit" value="Xóa" class="btn btn-danger" /> | @Html.ActionLink("Trở về", "Index", "", new { @class = "btn btn-outline-dark" })
        </div>
    }
</div>