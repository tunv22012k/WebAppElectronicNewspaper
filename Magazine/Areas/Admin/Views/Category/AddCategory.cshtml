@model Magazine.Models.Category

@{ 
    ViewBag.Title = "Thêm chuyên mục cha";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; 
}

<h2>Thêm chuyên mục cha</h2>

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post, new { area = "Admin" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
    <div class="form-group">

        <div>
            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
        </div>
    </div>
        <p></p>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Thêm</button>
            @Html.ActionLink("Quay lại", "Index", "Category", new { area = "Admin" }, new { @class = "btn btn-outline-secondary" })
        </div>
    </div>
}